{
  "name": "nospace-webui",
  "private": true,
  "main": "/dev/null",
  "scripts": {
    "dev": "ts-node --project tsconfig.server.json src/app/MainServer.ts ",
    "prod": "FRONTEND=static NODE_ENV=production node build/app/MainServer.js",
    "build": "npm run build-vite && npm run build-server",
    "build-vite": "vite build",
    "build-server": "tsc --project tsconfig.server.json",
    "test": "jest --coverage",
    "test-update": "jest --updateSnapshot",
    "lint": "prettier --check 'src/**/*.ts' 'src/**/*.tsx' && eslint src/**/*.ts src/**/*.tsx",
    "lint-fix": "prettier --write 'src/**/*.ts' 'src/**/*.tsx'"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "ace-builds": "^1.36.5",
    "dotenv": "^17.2.4",
    "express": "^4.22.1",
    "jotai": "^2.12.5",
    "react": "^18.3.1",
    "react-ace": "^13.0.0",
    "react-dom": "^18.3.1",
    "sass": "^1.90.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/express": "^5.0.6",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.33",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.7.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^28.12.0",
    "eslint-plugin-react": "^7.37.2",
    "globals": "^16.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.7.4",
    "ts-jest": "^29.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.51.0",
    "vite": "^6.3.5"
  }
}
